@model IPagedList<ducstore.Models.news>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminlayout.cshtml";
}
@using PagedList;
@using PagedList.Mvc;


<div class="main-content">
    <div class="page-tool">
            @Html.ActionLink(" Thêm mới", "Create", new { }, new { @class = "btn add-btn fas fa-plus" })
    </div>

    <table  class="table">
        <thead class="thead-dark table-bordered">
                <tr>
                                            <th>
                        @Html.DisplayNameFor(model => model.First().newstittle)
                    </th>
                                            <th>
                        @Html.DisplayNameFor(model => model.First().author)
                    </th>
                                            <th>
                        @Html.DisplayNameFor(model => model.First().picture)
                    </th>
                                      
                                        
                                <th>Chức năng</th>
                </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                                <td>
                    @Html.DisplayFor(modelItem => item.newstittle)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.author)
                </td>
                                <td>
                    <img src="~/Content/anh/@item.picture" style="max-width:30rem;"/>
                </td>
                             
                              
                        <td>
                    @Html.ActionLink(" ", "Edit", new { id=item.newsid } , new { @Class = "text-primary btn btn-default far fa-edit table-button" }) 
                    @Html.ActionLink(" ", "Details", new { id=item.newsid } , new { @Class = "gray fas btn btn-default fa-info table-button" }) 
                    @Html.ActionLink(" ", "Delete", new { id=item.newsid }, new { @Class = "text-danger btn btn-default far fa-trash-alt table-button" })
                </td>
                    </tr>
        }
    </tbody>
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", "newss", new { page }),
                                                                                   new PagedListRenderOptions
                                                                                        {
                                                                                      ContainerDivClasses = new string[] { "page-item" }
                                                                                   })
</div>    
