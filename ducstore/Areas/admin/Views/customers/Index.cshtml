@model IPagedList<ducstore.Models.customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminlayout.cshtml";
}
@using PagedList;
@using PagedList.Mvc;


<div class="main-content">
    <div class="page-tool">
            @Html.ActionLink(" Thêm mới", "Create", new { }, new { @class = "btn add-btn fas fa-plus" })
    </div>

    <table  class="table">
        <thead class="thead-dark table-bordered">
                <tr>
                                                        <th>
                        @Html.DisplayNameFor(model => model.First().phonenumber)
                    </th>
                                            <th>
                        @Html.DisplayNameFor(model => model.First().customername)
                    </th>
                                            <th>
                        @Html.DisplayNameFor(model => model.First().address)
                    </th>
                                <th>Chức năng</th>
                </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                                        <td>
                    @Html.DisplayFor(modelItem => item.phonenumber)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.customername)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                        <td>
                    @Html.ActionLink(" ", "Edit", new { id=item.customerid } , new { @Class = "text-primary btn btn-default far fa-edit table-button" }) 
                    @Html.ActionLink(" ", "Details", new { id=item.customerid } , new { @Class = "gray btn btn-default fas fa-info table-button" }) 
                    @Html.ActionLink(" ", "Delete", new { id=item.customerid }, new { @Class = "text-danger btn btn-default far fa-trash-alt table-button" })
                </td>
                    </tr>
        }
    </tbody>
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", "customers", new { page }),
                                                                                   new PagedListRenderOptions
                                                                                        {
                                                                                      ContainerDivClasses = new string[] { "page-item" }
                                                                                   })
</div>    
